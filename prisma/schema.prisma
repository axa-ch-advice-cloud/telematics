generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  password String
  refreshToken RefreshToken[]
  createdAt DateTime @default(now())
  ModifiedAt DateTime @default(now())
}

model UnclearedCar {
  id Int @id @default(autoincrement())
  vin String
  provider Provider
  brand Brand
  createdAt DateTime @default(now())
  ModifiedAt DateTime @default(now())
}

model Car {
  id Int @id @default(autoincrement())
  vin String @unique
  mileageEntries MileageEntries[]
  availabelProvider Provider[]
  preferedProvider Provider
}

model RefreshToken {
  id Int @id @default(autoincrement())
  refreshToken String @unique
  user User @relation(fields:[userEmail], references: [email])
  userEmail String 
  createdAt DateTime @default(now())
}

model MileageEntries {
  id        Int     @id @default(autoincrement())
  car Car @relation(fields: [carVin], references: [vin])
  carVin String
  mileage   Int?
  createdAt DateTime @default(now())
  isValid Boolean
}


enum Provider {
    CARUSO
    HIGHMOBILITY
}

enum Brand {
    AlfaRomeo
    Audi
    BMW
    Citroen
    Dacia
    DS
    Fiat
    Ford
    Hyundai
